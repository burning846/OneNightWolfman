# Django设置
SECRET_KEY=your_secret_key_here
DEBUG=False
ALLOWED_HOSTS=.render.com,your-app-name.onrender.com

# 数据库设置 (Render会自动提供DATABASE_URL)
# DATABASE_URL=postgres://user:password@host:port/database

# Redis设置 (如果使用Render的Redis服务)
# REDIS_URL=redis://default:password@host:port

# CORS设置
CORS_ALLOWED_ORIGINS=https://your-frontend-app.onrender.com,http://localhost:3000

# Google OAuth设置
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# 使用Render设置文件
DJANGO_SETTINGS_MODULE=wolfBackend.settings_render